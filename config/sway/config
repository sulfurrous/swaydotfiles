set $mod Mod4
set $term foot
set $launcher wofi
#bar cfg fully migrated to matugen template please contact your local tech support service to resolve any issues regarding bar
#SCREENCAST FIX SEE ALSO ~/.config/xdg-desktop-portal/wlr.conf and smth
exec --no-startup-id dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec --no-startup-id autotiling-rs &
exec --no-startup-id ~/.config/sway/borders.sh &
exec --no-startup-id dunst &
exec --no-startup-id wob &
exec --no-startup-id mkfifo /tmp/wobpipe && tail -f /tmp/wobpipe | wob
exec --no-startup-id swww-daemon &
exec --no-startup-id wl-paste --type text --watch cliphist -max-items 1 store &
exec --no-startup-id wl-paste --type image --watch cliphist -max-items 1 store &


#SOUND N BRIGHTNESS
bindsym XF86AudioRaiseVolume exec ~/.config/sway/vol_limit.sh up
bindsym XF86AudioLowerVolume exec ~/.config/sway/vol_limit.sh down
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86MonBrightnessUp exec brightnessctl set +5% && brightnessctl -m | grep -oP '[0-9]+(?=%)' > /tmp/wobpipe
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- && brightnessctl -m | grep -oP '[0-9]+(?=%)' > /tmp/wobpipe


#RELOAD
bindsym --to-code $mod+Shift+r reload


#MOVEMENT N USER WINDOW MODIFIERS
floating_modifier $mod
bindsym $mod+space floating toggle
bindsym --to-code $mod+f fullscreen toggle

bindsym --to-code $mod+k focus up
bindsym --to-code $mod+j focus down
bindsym --to-code $mod+h focus left
bindsym --to-code $mod+l focus right
bindsym --to-code $mod+up focus up
bindsym --to-code $mod+down focus down
bindsym --to-code $mod+left focus left
bindsym --to-code $mod+right focus right
bindsym --to-code $mod+Shift+k move up 30 px 
bindsym --to-code $mod+Shift+j move down 30 px 
bindsym --to-code $mod+Shift+h move left 30 px 
bindsym --to-code $mod+Shift+l move right 30 px 
bindsym --to-code $mod+Shift+up move up 30 px 
bindsym --to-code $mod+Shift+down move down 30 px 
bindsym --to-code $mod+Shift+left move left 30 px 
bindsym --to-code $mod+Shift+right move right 30 px 
bindsym --to-code $mod+r mode "resize"

mode "resize" {
	
  bindsym --to-code $mod+k resize grow height 30 px
  bindsym --to-code $mod+j resize shrink height 30 px
  bindsym --to-code $mod+h resize shrink width 30 px
  bindsym --to-code $mod+l resize grow width 30 px
  bindsym --to-code $mod+down gaps inner all minus 2
  bindsym --to-code $mod+up gaps inner all plus 2
  bindsym --to-code $mod+right gaps outer all plus 2
  bindsym --to-code $mod+left gaps outer all minus 2
  bindsym --to-code $mod+r mode "default"

}

focus_follows_mouse yes
focus_on_window_activation smart


#EXECS
bindsym $mod+Return exec $term
bindsym --to-code $mod+t exec $term
bindsym --to-code $mod+q kill
bindsym --no-repeat --release Super_L exec pkill $launcher || $launcher --show drun
bindsym --to-code $mod+shift+w exec $term --title "change wp" ~/.config/sway/wp_change.sh

#MISC
bindsym Print exec grim - | wl-copy
bindsym Shift+Print exec grim -g "$(slurp)" - | wl-copy
bindcode ctrl+49 exec grim - | wl-copy
bindcode --to-code ctrl+shift+49 exec grim -g "$(slurp)" - | wl-copy

#FOR FUCKING GLYCIN
for_window [title="Open Files"] floating enable, resize set 700 500, move position center
for_window [title="Save File"] floating enable, resize set 700 500, move position center
for_window [title="imv - *"] floating enable, move position center
for_window [title="^change wp$"] floating enable, move position center, border none
floating_maximum_size 1200 x 800 

